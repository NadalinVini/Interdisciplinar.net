@model	IEnumerable<TestC.Models.Store>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Store";
}<div class="panel	panel-primary">
    <div class="panel-heading">
        Relação	de	Store registrados
    </div>
    <div class="panel-body">
        <table class="table	table-striped table-hover">
            <thead>
                <tr>                    
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>            
        </table>
    </div>
    <div class="panel-footer	panel-info">
        @Html.ActionLink("Register a new Store",
                                                "Create", null, new
                                                {
                                                    @class =
                                                "btn	btn-success"
                                                })
    </div>
</div>
@section	styles{
    <link href="@Url.Content(
						"~/content/DataTables/css/dataTables.bootstrap.css")" rel="stylesheet" />
}
@section	ScriptPage	{
    <script src=" @Url.Content("~/Scripts/DataTables/jquery.dataTables.js") "></script>
    <script src="@Url.Content("~/Scripts/DataTables/dataTables.bootstrap.js")"></script>
    <script type="text/javascript">
				$(document).ready(function () {
				    $('.table').dataTable({
				        "order": [[1, "asc"]]
				    });
				    $('li').removeClass("active");
				    $('#liStores').addClass("active");

});
    </script>
}
