@model	TestC.Models.Storage
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Viewing a Storage's details";
}
<div class="panel	panel-primary">
    <div class="panel-heading">
        Viewing a Storage's details
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(model => model.StorageId)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon
																												glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Product, new
           {
               htmlAttributes
               = new { @class = "form-control", disabled = "disabled" }
           })
                @Html.EditorFor(model => model.Amount, new
           {
               htmlAttributes
               = new { @class = "form-control", disabled = "disabled" }
           })
                @Html.EditorFor(model => model.StoreId, new
           {
               htmlAttributes
               = new { @class = "form-control", disabled = "disabled" }
           })         


            </div>
        </div>
    </div>
    <div class="panel-footer	panel-info">
        @Html.ActionLink("Change", "Edit", new { id = Model.StorageId }, new { @class = "btn	btn-info" })

        @Html.ActionLink("Return to list of Storage index", null, new { @class = "btn	btn-info" })
    </div>
</div>